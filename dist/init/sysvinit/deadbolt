#!/bin/sh
### BEGIN INIT INFO
# Provides:          deadbolt
# Required-Start:    $local_fs $network $named $time $syslog
# Required-Stop:     $local_fs $network $named $time $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: starts deadbolt
# Description:       starts deadbolt
### END INIT INFO

DESC="deadbolt"
NAME=deadbolt
DAEMON=/usr/local/bin/deadbolt


LOGFILE=/var/log/$NAME.log
CONFIGFILE=/etc/deadbolt/deadbolt.yml

test -x $DAEMON || exit 0

start() {
    touch $LOGFILE
    exec nohup "$DAEMON" -c "$CONFIGFILE" &
}

stop() {
  pkill -f "$DAEMON"
}

reload() {
  echo "Reload not supported.  Restarting instead"
  start
  stop
}

status() {
    if pgrep -f "$DAEMON" > /dev/null; then
      echo "$NAME is running"
    else
        echo "$NAME is not running"
    fi
}

case "$1" in
    start)
        echo "Starting $NAME"
        start
    ;;
    stop)
        echo "Stopping $NAME"
        stop
    ;;
    restart)
        echo "Restarting $NAME"
        stop
        start
    ;;
    reload)
        echo "Reloading $NAME"
        reload
    ;;
    status)
        status
    ;;
    *)
        echo "Usage: $0 {start|stop|restart|reload|status}"
        exit 2
    ;;
esac

exit 0
